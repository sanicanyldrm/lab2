#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main (void) {
   char string1[100];
   char string2[100];

   char temp;
	printf("please enter first string :");
	gets(string1);//this line of code gets first string 
	printf("\nplease enter first secons string :");
	gets(string2);//this line of code gets second string 
	
   
   int i, j;
   int sizeString1  = strlen(string1);//this line of code calculate size of string 1
   int sizeString2 = strlen(string2);//this line of code calculate size of string 2
   
   
   
   

   // if size of string is not equal they are not anagrams

   if( sizeString1 != sizeString2) {    
      printf("\n%s and %s are not anagrams! \n", string1, string2);
      return 0;
   }
   
   // these codes sorting two strings

   for (i = 0; i < sizeString1-1; i++) {
      for (j = i+1; j < sizeString1; j++) {
         if (string1[i] > string1[j]) {
            temp  = string1[i];
            string1[i] = string1[j];
            string1[j] = temp;
         }
         if (string2[i] > string2[j]) {
            temp  = string2[i];
            string2[i] = string2[j];
            string2[j] = temp;
         }
      }
   }
   printf("\n%s\n%s",string1,string2);

   // these code compare two string if two character of strings are euqal, display strings are anagrams. if they are not equal, display strings are not anagram

   for(i = 0; i<sizeString1; i++) {
      if(string1[i] != string2[i]) {    
         printf("\nStrings are not anagrams! ", string1, string2);
         return 0;
      }
   }

   printf("Strings are anagrams! \n");
   return 0;
}
